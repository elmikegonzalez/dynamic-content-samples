{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
    "id": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/banners/video-banner-1.json",
    "title": "Video Banner",
  "description": "banner displaying video title and a call to action",

  "allOf": [
    { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content" }
  ],

  "type": "object",
  "properties": {
    "video": { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/video-link" },
    "title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "title": "Editorial Title",
      "description": "optional header text",
      "format": "text"
    },
    "textBlocks": {
        "type": "array",
        "title": "Styled text blocks",
        "description": "positioned styled text blocks",
        "maxItems": 5,
        "items": {
            "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/text-content-type-library.json#/definitions/positioned-styled-text-block"
        }
    },
    "callToAction": {
        "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/links-content-type-library.json#/definitions/relative-link"
    }
},

  "propertyOrder": ["video", "title", "text", "callToAction"]
}