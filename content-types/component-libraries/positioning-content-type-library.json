{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Core type schema",
    "description":"core content type components to build content types",
    "id": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/positioning-content-type-library.json",
    "definitions": {
        "positioning-top-left": {
            "type": "object",
            "title": "POSITION",
            "description": "position fields using % offset from top and left ",
            "properties": {
                "top": {
                    "type": "number",
                    "title": "Top %"
                },
                "left": {
                    "type": "number",
                    "title": "Left %"
                }
            }
        },
        "positioning-bottom-right": {
            "type": "object",
            "title": "POSITION",
            "description": "position fields using % offset from bottom and right ",
            "properties": {
                "bottom": {
                    "type": "number",
                    "title": "Bottom %"
                },
                "right": {
                    "type": "number",
                    "title": "Right %"
                }
            }
        }
    }
}