{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Core type schema",
    "description":"core content type components to build content types",
    "id": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content%20types/core-type-library.json" ,
    "definitions": {
        "aligned-text": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "text": {
                    "type": "string",
                    "title": " Text",
                    "description": "Line of text",
                    "format": "text"
                },
                "alignment": {
                    "$ref": "#/definitions/h-align"
                }
            }
        },
        "css-class-styled-text": {
            "type": "object",
            "title": "Styled Text",
            "description": "Text line that can be styled using classes and CSS",
            "additionalProperties": false,
            "properties": {
                "text": {
                    "type": "string",
                    "title": "line of text",
                    "description": "Actual text",
                    "format": "text"
                },
                "classes": {
                    "type": "string",
                    "title": "CSS Classes",
                    "description": "Add CSS classes with a space between each such as: crate-helvetica-light  headline-medium",
                    "format": "text"
                },
                "alignment": {
                    "$ref": "#/definitions/h-align",
                    "title": "Align text"
                }
            },
            "propertyOrder": [
                "text",
                "classes",
                "alignment"
            ]
        },
        "aligned-text-block": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "block-alignment": {
                    "$ref": "#/definitions/alignment",
                    "title": "Text"
                },
                "text-items": {
                    "type": "array",
                    "title": "Text",
                    "items": {
                        "$ref": "#/definitions/aligned-text"
                    }
                }
            }
        },
        "positioned-text-block": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "block-position": {
                    "$ref": "#/definitions/positioning-top-left",
                    "title": "Text"
                },
                "text-items": {
                    "type": "array",
                    "title": "Text",
                    "items": {
                        "$ref": "#/definitions/aligned-text"
                    }
                }
            }
        },
        "aligned-styled-text-block": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "block-alignment": {
                    "$ref": "#/definitions/alignment",
                    "title": "Text"
                },
                "text-items": {
                    "type": "array",
                    "title": "Text",
                    "items": {
                        "$ref": "#/definitions/flexy-styled-text"
                    }
                }
            }
        },
        "positioned-styled-text-block": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "block-position": {
                    "$ref": "#/definitions/positioning-top-left",
                    "title": "Text"
                },
                "text-items": {
                    "type": "array",
                    "title": "Text",
                    "items": {
                        "$ref": "#/definitions/flexy-styled-text"
                    }
                }                
            }
        }
    }
}