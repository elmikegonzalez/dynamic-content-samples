{
	 "$schema": "http://json-schema.org/draft-04/schema#",
	 "type": "object",
	 "title": "Core type schema",
	 "description": "core content type components to build content types",
	 "id": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/text-content-type-library.json",
	 "definitions": {
		 "aligned-text": {
			 "type": "object",
			 "title": "LINE OF TEXT",
			 "properties": {
				 "text": {
					 "type": "string",
					 "title": " Line of text",
					 "description": "Text to be displayed.",
					 "format": "text"
				},
				 "alignment": {
					 "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/alignment-content-type-library.json#/definitions/h-align"
				}
			}
		},
		 "css-class-styled-text": {
			 "type": "object",
			 "title": "LINE OF TEXT",
			 "description": "Text line that can be styled using classes and CSS",
			 "additionalProperties": false,
			 "properties": {
				 "text": {
					 "type": "string",
					 "title": "Line of text",
					 "description": "Text to be displayed",
					 "format": "text"
				},
				 "classes": {
					 "type": "string",
					 "title": "Text styling options",
					 "description": "Add CSS classes with a space between each such as: headline-medium",
					 "format": "text"
				},
				 "alignment": {
					 "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/alignment-content-type-library.json#/definitions/h-align"
				}
			},
			 "propertyOrder": [
				"text",
				"classes",
				"alignment"
			]
		},
		 "aligned-text-block": {
			 "type": "object",
			 "title": "TEXT BLOCK",
			 "properties": {
				 "block-alignment": {
					 "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/alignment-content-type-library.json#/definitions/alignment"
				},
				 "classes": {
					 "type": "string",
					 "title": "Block styling options",
					 "description": "Add CSS classes with a space between each such as: white-transparent-box",
					 "format": "text"
				},
				 "text-items": {
					 "type": "array", 
					 "title": "TEXT LINE",
					 "items": {
						 "$ref": "#/definitions/aligned-text"
					}
				}
			},
			 "propertyOrder": [
				"block-alignment",
				"classes",
				"text-items"
			]
		},
		 "positioned-text-block": {
			 "type": "object",
			 "title": "TEXT BLOCK",
			 "properties": {
				 "block-position": {
					 "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/positioning-content-type-library.json#/definitions/positioning-top-left"
				},
				 "classes": {
					 "type": "string",
					 "title": "Block styling options",
					 "description": "Add CSS classes with a space between each such as: white-transparent-box",
					 "format": "text"
				},
				 "text-items": {
					 "type": "array",
					 "title": "TEXT LINE",
					 "items": {
						 "$ref": "#/definitions/aligned-text"
					}
				}
			},
			 "propertyOrder": [
				"block-position",
				"classes",
				"text-items"
			]
		},
		 "aligned-styled-text-block": {
			 "type": "object",
			 "additionalProperties": false,
			 "title": "TEXT BLOCK",
			 "properties": {
				 "block-alignment": {
					 "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/alignment-content-type-library.json#/definitions/alignment"
				},
				 "classes": {
					 "type": "string",
					 "title": "Block styling options",
					 "description": "Add CSS classes with a space between each such as: white-transparent-box",
					 "format": "text"
				},
				 "text-items": {
					 "type": "array",
					 "title": "TEXT LINE",
					 "items": {
						 "$ref": "#/definitions/css-class-styled-text"
					}
				}
			},
			 "propertyOrder": [
				"block-alignment",
				"classes",
				"text-items"
			]
		},
		 "positioned-styled-text-block": {
			 "type": "object",
			 "title": "TEXT BLOCK",
			 "additionalProperties": false,
			 "properties": {
				 "block-position": {
					 "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/positioning-content-type-library.json#/definitions/positioning-top-left",
					 "title": "Text"
				},
				 "classes": {
					 "type": "string",
					 "title": "Block styling options",
					 "description": "Add CSS classes with a space between each such as: white-transparent-box",
					 "format": "text"
				},
				 "text-items": {
					 "type": "array",
					 "items": {
						 "$ref": "#/definitions/css-class-styled-text"
					}
				}
			},
			 "propertyOrder": [
				"block-position",
				"classes",
				"text-items"
			]
		}
	}
}