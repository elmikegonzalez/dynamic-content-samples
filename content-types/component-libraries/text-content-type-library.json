{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/text-content-type-library.json",
    "type": "object",
    "title": "Core type schema",
    "description": "core content type components to build content types",
    "definitions": {
        "aligned-text": {
            "type": "object",
            "title": "LINE OF TEXT",
            "properties": {
                "text": {
                    "type": "string",
                    "title": " Line of text",
                    "description": "Text to be displayed.",
                    "format": "text"
                },
                "alignment": {
                    "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/alignment-content-type-library.json#/definitions/h-align"
                }
            }
        },
        "aligned-text-block": {
            "type": "object",
            "title": "TEXT BLOCK",
            "properties": {
                "block-alignment": {
                    "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/alignment-content-type-library.json#/definitions/alignment"
                },
                "classes": {
                    "type": "string",
                    "title": "Block styling options",
                    "description": "Add CSS classes with a space between each such as: white-transparent-box",
                    "format": "text"
                },
                "text-items": {
                    "type": "array",
                    "title": "TEXT LINE",
                    "items": {
                        "$ref": "#/definitions/aligned-text"
                    }
                }
            },
            "propertyOrder": [
                "block-alignment",
                "classes",
                "text-items"
            ]
        },
        "positioned-text-block": {
            "type": "object",
            "title": "TEXT BLOCK",
            "properties": {
                "block-position": {
                    "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/positioning-content-type-library.json#/definitions/positioning-top-left"
                },
                "block-color": {
                    "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/color-content-type-library.json#/definitions/web-color"
                },
                "text-color": {
                    "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/color-content-type-library.json#/definitions/web-color"
                },
                "block-transparency": {
                    "$ref": "https://raw.githubusercontent.com/zestrax/dynamic-content-samples/Development/content-types/component-libraries/opacity-content-type-library.json#/definitions/opacity-list"
                },
                "text-items": {
                    "type": "array",
                    "title": "TEXT LINE",
                    "items": {
                        "$ref": "#/definitions/aligned-text"
                    }
                }
            },
            "propertyOrder": [
                "block-position",
                "block-transparency",
                "block-color",
                "text-color",
                "text-items"
            ]
        }
    }
}